<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<BorderPane fx:id="borderPane" xmlns="http://javafx.com/javafx/8.0.102" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.haeorm.chatchat.root.chatnode.ChatNodeLayoutController">
   <center>
      <FlowPane fx:id="center" alignment="CENTER_RIGHT" hgap="2.0" BorderPane.alignment="CENTER">
         <children>
            <Text fx:id="time" fill="#a012ff" strokeType="OUTSIDE" strokeWidth="0.0" text="[Time]">
               <font>
                  <Font name="Malgun Gothic" size="9.0" />
               </font></Text>
            <Text fx:id="contents" strokeType="OUTSIDE" strokeWidth="0.0" text="[Contents]" textAlignment="RIGHT">
               <font>
                  <Font name="Malgun Gothic" size="11.0" />
               </font></Text>
         </children>
      </FlowPane>
   </center>
   <top>
      <FlowPane fx:id="top" alignment="CENTER_RIGHT" BorderPane.alignment="CENTER">
         <children>
            <Text fx:id="sender" strokeType="OUTSIDE" strokeWidth="0.0" text="[Sender]">
               <font>
                  <Font name="Malgun Gothic Bold" size="12.0" />
               </font></Text>
         </children>
      </FlowPane>
   </top>
   <bottom>
      <FlowPane fx:id="bottom" alignment="CENTER_RIGHT" BorderPane.alignment="CENTER" />
   </bottom>
</BorderPane>
